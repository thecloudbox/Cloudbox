{
  "dashboard": {
    "title": "CloudSentinel Monitoring",
    "tags": ["cloudsentinel", "aiops"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "CPU Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "100 - (avg(irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)"
          }
        ]
      },
      {
        "id": 2,
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "(node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes) / node_memory_MemTotal_bytes * 100"
          }
        ]
      },
      {
        "id": 3,
        "title": "Service Uptime",
        "type": "stat",
        "targets": [
          {
            "expr": "up"
          }
        ]
      }
    ]
  }
}
